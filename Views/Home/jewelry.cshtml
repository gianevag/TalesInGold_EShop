@model TalesInGold_EShop.Models.Jewelry


<!-- breadcrumb start -->
<div class="breadcrumb-area">
    <div class="container-fluid text-center">
        <div class="breadcrumb-stye gray-bg ptb-100">
            <h2 class="page-title">product details</h2>
            <ul>
                <li><a href="/">home</a></li>
                <li class="active">product details</li>
            </ul>
        </div>
    </div>
</div>
<!-- breadcrumb end -->
<!-- page section start -->
<div class="page-section section ptb-100">
    <div class="container-fluid">
        <div class="row mb-40">
            <!-- QuickView Product Images -->
            <div class="col-md-5 col-sm-6 col-xs-12 mb-40"> 
                <!-- Tab panes -->
                <div class="tab-content mb-10">
                    <div class="pro-large-img tab-pane active" id="pro-large-img-1">
                        <img src= @("/img/shop/"+ @Model.second_thumb_photo +".jpg") alt="" />
                    </div>
                    <div class="pro-large-img tab-pane" id="pro-large-img-2">
                        <img src= @("/img/shop/"+ @Model.yellowPhoto +".jpg") alt="" />
                    </div>
                    <div class="pro-large-img tab-pane" id="pro-large-img-3">
                        <img src= @("/img/shop/"+ @Model.whitePhoto +".jpg") alt="" />                  
                    </div>
                    <div class="pro-large-img tab-pane" id="pro-large-img-4">
                        <img src= @("/img/shop/"+ @Model.rosePhoto +".jpg") alt="" />
                    </div>
                </div>
                <!-- QuickView Product Thumbnail Slider -->
                <div class="pro-thumb-img-slider">
                    <div><a href="#pro-large-img-1" data-toggle="tab"><img src= @("/img/shop/"+ @Model.second_thumb_photo +".jpg") alt="" /></a></div>
                    <div><a href="#pro-large-img-2" data-toggle="tab"><img src= @("/img/shop/"+ @Model.yellowPhoto +".jpg") alt="" /></a></div>
                    <div><a href="#pro-large-img-3" data-toggle="tab"><img src= @("/img/shop/"+ @Model.whitePhoto +".jpg") alt="" /></a></div>
                    <div><a href="#pro-large-img-4" data-toggle="tab"><img src= @("/img/shop/"+ @Model.rosePhoto +".jpg") alt="" /></a></div>
                </div>
            </div>
            <!-- QuickView Product Details -->
            <div class="col-md-7 col-sm-6 col-xs-12 mb-40">
                <div class="product-details section">
                    <!-- Title -->
                    <h1 class="title">@Model.Title</h1>
                    <!-- Price Ratting -->
                    <!-- <div class="price-ratting section"> 
                            <span class="price float-left"><span class="new">€ @Model.Price </span></span> 
                         </div> -->
                    <!-- Short Description -->
                    <div class="short-desc section">
                        <h5 class="pd-sub-title">Quick Overview</h5>
                        <p> @Model.quickReview </p>
                    </div>
                    <!-- Buy section -->
                    <div class="quantity-cart section">
                        <h5 class="pd-sub-title">Buy</h5> 
                        <a href = "@Model.etsyUrl" target="_blank"> <button class="buy-from-platforms">Etsy</button></a>
                        
                        @if (!String.IsNullOrEmpty(Model.amazonUrl)){
                            <a href = @Model.amazonUrl target="_blank"> <button class="buy-from-platforms">Amazon US</button></a>
                        }                                                                     
                        
                        @if (!String.IsNullOrEmpty(Model.amazonUKUrl)){
                            <a href = @Model.amazonUKUrl target="_blank"> <button class="buy-from-platforms">Amazon UK</button></a>
                        }

                        @if (!String.IsNullOrEmpty(Model.dawandaUrl)){
                            <a href = @Model.dawandaUrl target="_blank"> <button class="buy-from-platforms">Dawanda</button></a>
                        }                        
                    </div>
                    <!-- Product Color -->
                    <div class="color-list section">
                        <h5 class="pd-sub-title">Select Color</h5>
                        <a href="#pro-large-img-2" data-toggle="tab"><button style="background-color: #ffdc73;"><i class="fa fa-check"></i></button></a>
                        <a href="#pro-large-img-4" data-toggle="tab"><button style="background-color: #e3a894;"><i class="fa fa-check"></i></button></a>
                        <a href="#pro-large-img-3" data-toggle="tab"><button style="background-color: #b8b8b8;"><i class="fa fa-check"></i></button></a>
                    </div>

                    <!-- Usefull Link -->
                    <!-- <ul class="usefull-link section">
                        <li><a href="#"><i class="pe-7s-mail"></i> Email to a Friend</a></li>
                        <li><a href="#"><i class="pe-7s-like"></i> Wishlist</a></li>
                        <li><a href="#"><i class="pe-7s-print"></i> print</a></li>
                    </ul> -->
                    <!-- Share -->
                    <div class="share-icons section">
                        <span>share :</span>
                        <a href="" id="facebook"><i class="fa fa-facebook" target="_blank"></i></a>
                        <a href="https://www.pinterest.com/pin/create/button/" data-pin-do="buttonPin" data-pin-custom="true"  target="_blank" id="pinterest"><i class="fa fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Nav tabs -->
            <div class="col-xs-12">
                <ul class="pro-info-tab-list section">
                    <li class="active"><a href="#more-info" data-toggle="tab">More info</a></li>
                    <!-- <li><a href="#data-sheet" data-toggle="tab">Data sheet</a></li>
                    <li><a href="#reviews" data-toggle="tab">Reviews</a></li> -->
                </ul>
            </div>
            <!-- Tab panes -->
            <div class="tab-content col-xs-12">
                <div class="pro-info-tab tab-pane active" id="more-info">
                    <p>@Model.moreInfo</p>
                </div>
                <!-- <div class="pro-info-tab tab-pane" id="data-sheet">
                    <table class="table-data-sheet">
                        <tbody>
                            <tr class="odd">
                                <td>Compositions</td>
                                <td>Cotton</td>
                            </tr>
                            <tr class="even">
                                <td>Styles</td>
                                <td>Casual</td>
                            </tr>
                            <tr class="odd">
                                <td>Properties</td>
                                <td>Short Sleeve</td>
                            </tr>
                        </tbody>
                    </table>
                </div> -->
                <div class="pro-info-tab tab-pane" id="reviews">
                    <a href="#">Be the first to write your review!</a>
                </div>
            </div>      
        </div>
    </div>
</div>

